<div class="container">
    <form action="/interview/create" method="POST">
      <fieldset>
        <legend>Add Interview</legend>
        <small>*All fields are compulsory</small>
  
        <!-- Interview Details  -->
        <div class="form-group">
          <label class="col-form-label col-form-label-sm mt-4" for="company">Company Name</label>
          <input class="form-control form-control-sm" type="text" name="company" id="company" required>
        </div>
        <div class="form-group">
          <label class="col-form-label col-form-label-sm mt-4" for="interviewDate">Date</label>
          <input class="form-control form-control-sm" type="text" name="interviewDate" id="interviewDate" placeholder="20-12-2021" required>
        </div>
        <div class="form-group">
          <label class="col-form-label col-form-label-sm mt-4" for="profile">Profile</label>
          <input class="form-control form-control-sm" type="text" name="profile" id="profile" placeholder="Software Engineer" required>
        </div>

        <button type="submit" class="btn btn-primary my-3">Submit</button>
      </fieldset>
    </form>
  </div>
  
  