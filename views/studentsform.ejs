<div class="container">
  <form action="/students/create" method="POST">
    <fieldset>
      <legend>Create New Student</legend>
      <small>*All fields are compulsory</small>


      <!-- Basic details of student and college -->
      <div class="form-group">
        <label for="name" class="form-label mt-4">Name of the Student</label>
        <input type="text" class="form-control" name="name" id="name" placeholder="Enter Name" required>
      </div>
      <div class="form-group">
        <label for="email" class="form-label mt-4">Email address</label>
        <input type="email" class="form-control" name="email" id="email" aria-describedby="emailHelp" placeholder="Enter email" required>
        <small class="form-text text-muted">We'll never share your email with anyone else.</small>
      </div>
      <div class="form-group">
        <label for="college" class="form-label mt-4">College Name</label>
        <input type="text" class="form-control" name="college" id="college" required>
        <small class="form-text text-muted">Format: Dyal Singh College</small>
      </div>
      <div class="form-group">
        <label for="batch" class="form-label mt-4">Batch</label>
        <input type="text" class="form-control" name="batch" id="batch" required>
        <small class="form-text text-muted">Format: 2020-2021</small>
      </div>
      <div class="form-group">
        <label for="phone" class="col-form-label col-form-label-sm mt-4"> Phone No.</label>
        <input class="form-control form-control-sm" type="tel" name="phone" id="phone" pattern="[0-9]{3}[0-9]{2}[0-9]{3}[0-9]{2}" required>
      </div>
      <div class="form-group">
        <label for="course" class="form-label mt-4">Course</label>
        <input type="text" class="form-control" name="course" id="course" placeholder="Your Course" required>
      </div>
      <div class="form-group">
        <label for="placed" class="form-label mt-4">Placed</label>
        <select class="form-select" name="placed" id="placed" required>
          <option>No</option> 
          <option>Yes</option>
        </select>
      </div>


      <!-- Scores -->
      <div class="form-group">
        <label class="col-form-label col-form-label-sm mt-4" for="dsaScore">DSA final Score</label>
        <input class="form-control form-control-sm" type="text"  name="dsaScore" id="dsaScore" required>
        <small class="form-text text-muted">Any number from 1-100 | Format: 00, 07, 23</small>
      </div>
      <div class="form-group">
        <label class="col-form-label col-form-label-sm mt-4" for="webDScore">WebD final Score</label>
        <input class="form-control form-control-sm" type="text" name="webDScore" id="webDScore" required>
        <small class="form-text text-muted">Any number from 1-100 | Format: 00, 07, 23</small>
        
      </div>

      <div class="form-group">
        <label class="col-form-label col-form-label-sm mt-4" for="reactScore">React final Score</label>
        <input class="form-control form-control-sm" type="text" name="reactScore" id="reactScore" required>
        <small class="form-text text-muted">Any number from 1-100 | Format: 00, 07, 23</small>
      </div>



      <!-- Interview Details  -->
      <div class="form-group">
        <label class="col-form-label col-form-label-sm mt-4" for="company">Company Name</label>
        <input class="form-control form-control-sm" type="text" name="company" id="company" required>
      </div>
      <div class="form-group">
        <label class="col-form-label col-form-label-sm mt-4" for="interviewDate">Date</label>
        <input class="form-control form-control-sm" type="text" name="interviewDate" id="interviewDate" required>
        <small class="form-text text-muted">Format: 25-02-2021</small>
      </div>
      <div class="form-group">
        <label class="col-form-label col-form-label-sm mt-4" for="profile">Profile</label>
        <input class="form-control form-control-sm" type="text" name="profile" id="profile" required>
      </div>
      <div class="form-group">
        <label for="result" class="form-label mt-4">Result</label>
        <select class="form-select" name="result" id="result" required>
          <option>Didn't Attempt</option>
          <option>Pass</option>
          <option>Fail</option>
          <option>On Hold</option>
        </select>
      </div>

      <button type="submit" class="btn btn-primary my-3">Submit</button>
    </fieldset>
  </form>
</div>

